<div class="previous">
  {% if previous_url %}
    <a href="{{ previous_url }}"><i class="fa fa-chevron-left"></i><span class="text">&nbsp;&nbsp;{{ previous_title }}</span></a>
  {% endif %}
</div>

<div class="next">
  {% if next_url %}
    <a href="{{ next_url }}"><span class="text">{{ next_title }}&nbsp;&nbsp;</span><i class="fa fa-chevron-right"></i></a>
  {% endif %}
</div>