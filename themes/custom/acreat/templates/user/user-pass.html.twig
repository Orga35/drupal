<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-6 col-lg-offset-3">
    {% if user_login_link %}
      <p>{{ user_login_link }}</p>
    {% endif %}
    
    <div class="panel panel-default">
      <div class="panel-body">
        {{ logo }}
        
        <div class="row">
          <div class="col-xs-12">
              <p>Saisissez votre nom d'utilisateur ou votre adresse e-mail pour r√©initialiser votre mot de passe :</p>
          </div>
          
          <div class="col-xs-12">
            {{ form.name }}
          </div>
          
          <div class="col-xs-12">
            {{ form.actions }}
            {{ form.form_build_id }} {# required #}
            {{ form.form_id }} {# required #}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>